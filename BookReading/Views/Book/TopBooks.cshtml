@model List<BookReading.Models.Book>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <thead class="thead-dark">
    <tr>
        <th scope="col">Title</th>
        <th scope="col">Author</th>
        <th scope="col">Description</th>
        <th scope="col">Genre</th>
        <th scope="col">Pages count</th>
        <th scope="col">Mark</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var book in Model)
    {
        <tr data="@book.Id" onclick="window.location.href='/Book/Details/' + this.getAttribute('data')">
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>@book.Description</td>
            <td>@book.Genre</td>
            <td>@book.Pages</td>
            <td>@book.Mark</td>
        </tr>
    } 
    </tbody>
</table>
<style>
    tr:hover {
        cursor: pointer;
        background: #f0f0f0;
    }
</style>

<hr/>
